{% set width = 1200 %}
{% set height = 628 %}
{% set width_start = 100 %}
{% set height_start = 280 %}
{% set font_size = 100 %}
<svg width="{{ width }}" height="{{ height }}" viewBox="0 0 {{ width }} {{ height }}" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
    <rect x="0" y="0" width="100%" height="100%" fill="black" />
    <text font-family="Helvetica, sans-serif" font-size="30" font-weight="bold" fill="white">
        <tspan x="{{ width_start }}" y="{{ height_start - 100 }}">{{ page.date|format_date }}</tspan>
    </text>
    {%- set lines = page.title|splitline(20) ~%}
    <text font-family="Helvetica, sans-serif" font-size="{{ font_size }}" font-weight="bold" fill="white">
        {%- for line in lines ~%}
        <tspan x="{{ width_start }}" y="{{ height_start + font_size * loop.index0 }}">{{ line }}</tspan>
        {%- endfor ~%}
    </text>
    <text font-family="Helvetica, sans-serif" font-size="30" font-weight="bold" fill="white">
        <tspan x="{{ width_start }}" y="{{ height - 60 }}">{{ site.title }} - {{ site.baseurl }}</tspan>
    </text>
</svg>