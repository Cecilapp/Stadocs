<!DOCTYPE html>
<html lang="{{ site.language }}" class="scroll-pt-[70px] scroll-smooth">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {%~ include 'partials/metatags.html.twig' ~%}
    <link href="https://fonts.googleapis.com/css?family=Dosis:300,400|Open+Sans:300,400,700|Poppins:400,600&display=swap" rel="stylesheet">
    <style>{{ asset('styles.css')|inline }}</style>
  </head>
  <body class="font-sans antialiased">
    <header class="h-16 fixed top-0 inset-x-0 z-10 bg-primary-700 px-4 py-3 shadow-md flex items-center">
      {#- mobile navigation ~#}
      <button class="flex lg:hidden items-center text-blue-100" onclick="toggleMenu()">
        <svg class="fill-current h-4 w-4" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
          <title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/>
        </svg>
      </button>
      {#- site title ~#}
      <a href="{{ url() }}" title="{{ site.title }}" class="lg:w-48 inline-block text-blue-100 hover:text-white px-4 py-2 sm:mr-4 lg:mr-8 xl:mr-24 text-xl">
        {{ site.title }}
      </a>
      {#- DocSearch ~#}
      {%- if site.docsearch.enabled ?? false ~%}
      <div id="search-container" class="md:inline-block px-4 py-2"></div>
      {%- endif ~%}
      {#- GitHub link ~#}
      <a href="{{ site.github.repo }}" title="{{ site.title }} on GitHub" class="flex text-blue-100 hover:text-white px-3 py-2 sm:mr-4 items-center">
        <svg class="fill-current text-blue-200 w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20">
          <title>{{ site.title }} on GitHub</title>
          <path d="M10 0a10 10 0 0 0-3.16 19.49c.5.1.68-.22.68-.48l-.01-1.7c-2.78.6-3.37-1.34-3.37-1.34-.46-1.16-1.11-1.47-1.11-1.47-.9-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.9 1.52 2.34 1.08 2.91.83.1-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.94 0-1.1.39-1.99 1.03-2.69a3.6 3.6 0 0 1 .1-2.64s.84-.27 2.75 1.02a9.58 9.58 0 0 1 5 0c1.91-1.3 2.75-1.02 2.75-1.02.55 1.37.2 2.4.1 2.64.64.7 1.03 1.6 1.03 2.69 0 3.84-2.34 4.68-4.57 4.93.36.31.68.92.68 1.85l-.01 2.75c0 .26.18.58.69.48A10 10 0 0 0 10 0"></path>
        </svg>
        <span class="hidden sm:block">GitHub</span>
      </a>
    </header>
    <main class="flex h-full mt-16">
    {%- block content ~%}
      {#- docs menu navigation ~#}
      <nav id="menu" class="fixed flex-shrink-0 lg:w-64 xl:w-80 lg:flex lg:flex-col z-30 h-screen w-full hidden bg-gray-100 px-6 lg:px-8 py-4 lg:py-8 overflow-auto leading-tight">
        {%- for entry in site.menu ~%}
        <h3>{{ entry }}</h3>
        <ul>
          {%- for p in site.pages.showable|filter(p => p.path matches '{^docs/' ~ entry|slugify ~ '}') ~%}
          <li>
            <a href="{{ url(p) }}" class="{% if url(p) == url(page) %}active{% endif %}">{{ p.title }}</a>
          </li>
          {%- endfor ~%}
        </ul>
        {%- endfor ~%}
      </nav>
      <article class="w-full lg:ml-64 xl:ml-96 overflow-x-hidden px-4 md:px-6 lg:px-16 py-8 lg:py-16">
        {#- GitHub edit ~#}
        {%- if page.type != 'homepage' ~%}
        <a href="{{ site.github.repo }}/blob/{{ site.github.branch }}/pages/{{ page.filepath }}" title="Improve the documentation by editing this file on GitHub" class="hidden md:inline-block float-right text-sm hover:bg-gray-100 text-gray-900 py-2 px-4 border border-gray-400 rounded hover:no-underline">
          Edit<span class="hidden lg:inline"> on GitHub</span>
        </a>
        {%- endif ~%}
        {#- article content ~#}
        <section id="content" class="markdown max-w-none">
          {%- block article ~%}
          {{ page.content }}
          {%- endblock article ~%}
        </section>
        {#- prev/next navigation ~#}
        {%- if page.next is defined or page.prev is defined ~%}
        <div class="mt-12 mb-12 flow-root">
          {%- if page.prev is defined ~%}
          <a class="float-left mt-3" href="{{ url(page.prev) }}" title="{{ page.prev.title }}">
            ← {{ page.prev.title }}
          </a>
          {%- endif ~%}
          {%- if page.next is defined ~%}
          <a class="float-right mt-3" href="{{ url(page.next) }}" title="{{ page.next.title }}">
            {{ page.next.title }} →
          </a>
          {%- endif ~%}
        </div>
        {%- endif ~%}
      </article>
      {#- current page navigation ~#}
      {%- if page.type != 'homepage' ~%}
      <nav id="in-page-menu" class="hidden xl:block py-8 w-64 text-gray-500">
        <h3 class="mb-2 font-semibold text-sm uppercase">On this page</h3>
        <ul class="list-none p-0 sticky top-[80px]"></ul>
      </nav>
      {%- endif ~%}
    {% endblock content %}
    </main>
    <footer>
    </footer>
    {#- scripts ~#}
    <script>
      function toggleMenu() {
        document.getElementById('menu').classList.toggle('hidden');
      }
    </script>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/styles/github.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.slim.min.js" integrity="sha512-5NqgLBAYtvRsyAzAvEBWhaW+NoB+vARl6QiA02AFMhCWvPpi7RWResDcTGYvQtzsHVCfiUhwvsijP+3ixUk1xw==" crossorigin="anonymous"></script>
    <script>
      $(function () {
        $('article h2, article h3').each(function () {
          var url = document.URL.replace(/#.*$/, "") + '#' + $(this).attr('id');
          $(this).prepend(' <a class="title-anchor" href="' + url + '">#</a>');
        });
        $('article h2').each(function () {
          var url = '#' + $(this).attr('id');
          var caption = $(this).text().substr(2);
          $('#in-page-menu ul').append('<li class="py-2"><a class="text-gray-500" href="' + url + '">' + caption + '</a></li>');
        });
      });
    </script>
    {%- if site.docsearch.enabled ?? false ~%}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@docsearch/css@3"/>
    <script src="https://cdn.jsdelivr.net/npm/@docsearch/js@3"></script>
    <script>
      docsearch({
        apiKey: '{{ site.docsearch.apiKey|default }}',
        appId: '{{ site.docsearch.appId|default }}',
        indexName: '{{ site.docsearch.indexName|default }}',
        container: '#search-container',
        debug: {{ site.docsearch.debug|default('false') }}
      });
    </script>
    {%- endif ~%}
  </body>
</html>
