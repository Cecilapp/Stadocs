{% extends '_default/page.html.twig' %}

    {% block content %}
      {%- include 'partials/sidebar.html.twig' ~%}
      <article class="w-full lg:ml-64 xl:ml-80 overflow-x-hidden px-4 md:px-6 lg:px-16 py-8 lg:py-16">
        {#- article content ~#}
        <section id="content" class="markdown max-w-none">
          {%- block article ~%}
          {{ page.content }}
          {%- endblock article ~%}
        </section>
        <footer class="pt-6">
          {%- include 'partials/edit.html.twig' ~%}
          {%- include 'partials/languages.html.twig' ~%}
        </footer>
        {#- prev/next navigation ~#}
        {%- if page.next is defined or page.prev is defined ~%}
        <nav class="mt-12 mb-12">
          {%- if page.prev is defined ~%}
          <a class="float-left mt-3 font-medium hover:no-underline" href="{{ url(page.prev) }}" title="{{ page.prev.title }}">
            <div class="mb-2 text-slate-500">Previous</div>
            <div class="hover:opacity-75">← {{ page.prev.title }}</div>
          </a>
          {%- endif ~%}
          {%- if page.next is defined ~%}
          <a class="float-right mt-3 font-medium hover:no-underline" href="{{ url(page.next) }}" title="{{ page.next.title }}">
            <div class="mb-2 text-slate-500 text-right">Next</div>
            <div class="hover:opacity-75">{{ page.next.title }} →</div>
          </a>
          {%- endif ~%}
        </nav>
        {%- endif ~%}
      </article>
      {#- current page navigation ~#}
      {%- if page.type != 'homepage' ~%}
      <div>
        <nav id="on-this-page" class="hidden xl:block py-8 w-64 text-slate-400 sticky top-[80px]">
          <h3 class="mb-2 font-semibold text-sm uppercase tracking-wider">On this page</h3>
          <ul class="list-none pb-5 border-b-2"></ul>
          {%- include 'partials/edit.html.twig' ~%}
        </nav>
      </div>
      {%- endif ~%}
    {% endblock content %}